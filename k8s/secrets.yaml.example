apiVersion: v1
kind: Secret
metadata:
  name: atas-secrets
  namespace: atas
type: Opaque
stringData:
  # Database credentials
  # IMPORTANT: Replace these with your actual credentials
  DB_USERNAME: "CHANGE_ME"
  DB_PASSWORD: "CHANGE_ME"
  
  # S3 Configuration
  # IMPORTANT: Replace these with your actual S3 configuration
  S3_BUCKET: "CHANGE_ME"
  S3_REGION: "CHANGE_ME"
  S3_VIDEO_FOLDER: "videos"
  S3_SCREENSHOT_FOLDER: "screenshots"
  
  # JWT Secrets (generate strong secrets in production)
  # IMPORTANT: Generate strong random secrets (minimum 32 characters)
  ATAS_JWT_SECRET: "CHANGE_ME_MINIMUM_32_CHARACTERS_LONG_SECRET_KEY"
  ATAS_INTERNAL_API_SECRET: "CHANGE_ME_MINIMUM_32_CHARACTERS_LONG_INTERNAL_SECRET"
  ATAS_INTERNAL_API_KEY: "CHANGE_ME_INTERNAL_API_KEY"
  
  # Redis password (optional - leave empty for no password)
  REDIS_PASSWORD: ""
  
  # Test execution secrets (required for API tests)
  # These are loaded from .env file in local development
  # In Kubernetes, they must be set as secrets
  TEST_PASSWORD: "CHANGE_ME"

---
# Note: In production, use external secret management:
# - AWS Secrets Manager
# - HashiCorp Vault
# - Kubernetes External Secrets Operator
#
# IMPORTANT: Copy this file to secrets.yaml and fill in your actual values.
# The secrets.yaml file is gitignored and should NEVER be committed.
