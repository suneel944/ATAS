# ATAS Environment Configuration Template
# Copy this file to .env and update with your actual values
# cp .env.example .env

# Database Configuration
# For local development with Docker: jdbc:postgresql://localhost:5433/atasdb
# For production: jdbc:postgresql://your-production-host:5432/atasdb
DB_URL=jdbc:postgresql://localhost:5433/atasdb
DB_USERNAME=atas
DB_PASSWORD=ataspass

# Spring Profile (dev, stage, prod)
SPRING_PROFILES_ACTIVE=dev

# S3 Configuration (optional - for video/screenshot storage)
# Only required if using S3 for storing test artifacts
S3_BUCKET=atas-videos
S3_REGION=us-east-1
S3_VIDEO_FOLDER=videos
S3_SCREENSHOT_FOLDER=screenshots

# ATAS Test Execution Recording
# Set ATAS_RECORD_LOCAL=true to enable local test recording to database
# Set to false or remove to disable recording (tests will still run, but results won't be saved)
ATAS_RECORD_LOCAL=true
